<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="audio_music_style" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/audioplayer_down_to_top</item>
        <item name="android:activityOpenExitAnimation">@anim/audioplayer_top_to_down</item>
        <item name="android:activityCloseEnterAnimation">@anim/audioplayer_down_to_top</item>
        <item name="android:activityCloseExitAnimation">@anim/audioplayer_top_to_down</item>
    </style>

    <style name="audioMusicTheme" parent="@android:style/Theme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/audio_music_style</item>
    </style>
</resources>